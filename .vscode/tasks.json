{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "args": [
                "--target",
                "wasm32-unknown-unknown",
                "--example",
                "basic"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/../vexide"
            },
            "label": "rust: build vexide",
        }
    ]
}
